<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/hsinfo_search"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_weight="0.95"
            android:hint="请输入热站名" 
           
            />
        

        <ImageButton
            android:id="@+id/hsinfo_btn_showOnMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="showOnMap"
            android:src="@drawable/showmap" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textloc"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="  热  站  "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/hsinfo_spinner_class"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:layout_weight="2.60" />

        <ImageButton
            android:id="@+id/hsinfo_btn_query"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="0dp"
            android:onClick="query"
            android:src="@drawable/search" />
    </LinearLayout>

    <ListView
        android:id="@+id/hs_listview_heatsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
</LinearLayout>
