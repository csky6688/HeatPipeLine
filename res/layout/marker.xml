<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/marker"
    android:orientation="vertical" >
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textloc"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="添  加  标  记"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="0.8"
            android:background="#000000"
            
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/valve_ib_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#000000"
            android:onClick="close"
            android:src="@drawable/close" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  名  称"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/marker_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >
            
            <requestFocus />
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  备  注"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/marker_edit_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >
            
            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="  类  别"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/marker_spinner_classify"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1" 
            android:entries="@array/classify"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  X 坐标"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/marker_edit_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Y 坐标"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/marker_edit_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <ImageView
        android:id="@+id/marker_img_classify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/marker_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提    交"
        android:onClick="submit"
        android:textSize="20sp"
        android:background="@drawable/button_bg" />

</LinearLayout>
